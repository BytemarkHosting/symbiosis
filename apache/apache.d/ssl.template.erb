        #
        <LocationMatch "^/+$">
                Options -Indexes
                ErrorDocument 403 /bytemark/
        </LocationMatch>

        #
        #  The document root
        #
        DocumentRoot     <%= domain_directory %>/public/htdocs/

        #
        # General CGI Handling
        #
        ScriptAlias /cgi-bin/ <%= domain_directory %>/public/cgi-bin/
        <Location /cgi-bin>
                Options +ExecCGI
